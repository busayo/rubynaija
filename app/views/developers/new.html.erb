<%= content_for :body do   %>
	<div class="container" style="margin-top:50px;">

  <%= form_for( @developer, class: "form-horizontal", role: "form" ) do |f| %>
            <div class="row" style="margin-bottom:40px;">
                <div class="col-md-8 col-md-offset-2">
                    <h1>Add Yourself As a Nigerian Rails Developer</h1>

                    <h3>Let the Nigerian Developer Community Know About You</h3>

                        <% if notice %>
                        <p class="bg-success" style="padding:10px;border-radius:5px;">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                              <%= notice %>
                        </p>
                        <% end %>    

                        <% if @developer.errors.any? %>
         
                          <p class="bg-danger" style="padding:10px;border-radius:5px;">
                              <button type="button" class="close" data-dismiss="alert">&times;</button>
                                Oops! Please check the form below for errors.
                          </p>

                        <% end %>

                        <p><%= f.text_field :name, class: "form-control", placeholder: "Name" %></p>
                        <% if @developer.errors.any? %> <p class="text-danger"><%= @developer.errors.full_messages.at(0) %> </p> <% end %>

                        <p><%= f.email_field :email, class: "form-control", placeholder: "Your email" %></p>
                        <% if @developer.errors.any? %> <p class="text-danger"><%= @developer.errors.full_messages.at(1) %> </p> <% end %>

                        <p><%= f.text_field :url, class: "form-control", placeholder: "e.g http://rubynaija.com" %></p>
                        <% if @developer.errors.any? %> <p class="text-danger"><%= @developer.errors.full_messages.at(2) %> </p> <% end %>

                        <p><%= f.text_field :work_place, class: "form-control", placeholder: "Your Work-Place e.g FreeLancer, Andela, Konga.com"  %></p>
                        <% if @developer.errors.any? %> <p class="text-danger"><%= @developer.errors.full_messages.at(3) %> </p> <% end %>

                        <p><%= f.text_field :code_name, class: "form-control", placeholder: "CodeName e.g Namzo, Chilas, Legend " %></p>
                        <% if @developer.errors.any? %> <p class="text-danger"><%= @developer.errors.full_messages.at(4) %> </p> <% end %>

                        <p><%= f.hidden_field :tags, :value => "developer" %></p>

                        <p><%= f.hidden_field :approval_status, :value => "0" %></p>

                        <p><%= f.text_area 'bio', class: "form-control", placeholder: "Write a Short Bio about How Awesome you Are", rows: 4, cols: 50 %></p>
                        <% if @developer.errors.any? %> <p class="text-danger"><%= @developer.errors.full_messages.at(5) %> </p> <% end %>

                        <p><%= f.button "ADD NAIJA DEVELOPER", class: "btn btn-success btn-lg btn-block" %></p>

              

                 </div>
                </div>
            <% end %>
            </div>
    </div>  
<% end %>